{
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "type": "docs",
            "scope": "README",
            "release": "patch"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "hotfix",
            "release": "patch"
          },
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "scope": "no-release",
            "release": false
          },
          {
            "scope": "test",
            "release": false
          }
        ],
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES",
            "BREAKING"
          ]
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "verifyReleaseCmd": "echo ${nextRelease.version} > semver.txt"
      }
    ]
  ],
  "branches": [
    "main",
    {
      "name": "dev",
      "prerelease": "dev"
    },
    {
      "name": "feature/*",
      "prerelease": "${name.split('/').slice(0, 2).join('-').toLowerCase()}"
    }
  ]
}